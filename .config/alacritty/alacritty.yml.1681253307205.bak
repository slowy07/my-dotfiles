import:
  - ./colors-material.yml

window:
  padding:
    x: 10
    y: 10

  decorations: none

  opacity: 1.0
  dynamic_title: true

  history: 10000
  multiplier: 3

font:
  normal:
    family: Agave Nerd Font
    #style: Regular

  bold:
    family: Agave Nerd Font
    #style: Bold

  italic:
    family: Agave Nerd Font
    #style: Italic

  bold_italic:
    family: Agave Nerd Font
    #style: Bold Italic

  size: 9
  offset:
    x: -2
    y: -2

# Colors (Decay, decayce variant) z0mbi3 Rice
selection:
  save_to_clipboard: false

cursor:
  style:
    shape: Block
    blinking: On

  unfocused_hollow: false
  blink_interval: 550

live_config_reload: true
colors:
  name: 3024 (dark)
  author: Chris Kempson
  primary:
    background: "#090300"
    foreground: "#a5a2a2"
  cursor:
    text: "#090300"
    cursor: "#a5a2a2"
  normal:
    black: "#090300"
    red: "#db2d20"
    green: "#01a252"
    yellow: "#fded02"
    blue: "#01a0e4"
    magenta: "#a16a94"
    cyan: "#b5e4f4"
    white: "#a5a2a2"
  bright:
    black: "#5c5855"
    red: "#db2d20"
    green: "#01a252"
    yellow: "#fded02"
    blue: "#01a0e4"
    magenta: "#a16a94"
    cyan: "#b5e4f4"
    white: "#f7f7f7"
theme: 3024.dark
