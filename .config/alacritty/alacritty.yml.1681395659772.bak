import:
  - ./colors-material.yml

window:
  padding:
    x: 10
    y: 10

  decorations: none

  opacity: 1.0
  dynamic_title: true

  history: 10000
  multiplier: 3

font:
  normal:
    family: Jetbrains Mono Nerd Font
    #family: Iosevka Nerd Font
    #family: Agave Nerd Font
    #style: Regular

  bold:
    family: Agave Nerd Font
    #style: Bold

  italic:
    family: Agave Nerd Font
    #style: Italic

  bold_italic:
    family: Agave Nerd Font
    #style: Bold Italic

  size: 8
  offset:
    x: -3
    y: -4

# Colors (Decay, decayce variant) z0mbi3 Rice
selection:
  save_to_clipboard: false

cursor:
  style:
    shape: Block
    blinking: On

  unfocused_hollow: false
  blink_interval: 550

live_config_reload: true
colors:
  name: Greenscreen (dark)
  author: Chris Kempson
  primary:
    background: "#001100"
    foreground: "#00bb00"
  cursor:
    text: "#001100"
    cursor: "#00bb00"
  normal:
    black: "#001100"
    red: "#007700"
    green: "#00bb00"
    yellow: "#007700"
    blue: "#009900"
    magenta: "#00bb00"
    cyan: "#005500"
    white: "#00bb00"
  bright:
    black: "#007700"
    red: "#007700"
    green: "#00bb00"
    yellow: "#007700"
    blue: "#009900"
    magenta: "#00bb00"
    cyan: "#005500"
    white: "#00ff00"
theme: Greenscreen.dark
